{
  "name": "multi-account-containers",
  "title": "Multi-Account Containers",
  "description": "Containers helps you keep all the parts of your online life contained in different tabs. Custom labels and color-coded tabs help keep different activities — like online shopping, travel planning, or checking work email — separate.",
  "version": "8.1.3",
  "author": "Andrea Marchesini, Luke Crouch, Lesley Norton, Kendall Werts, Maxx Crawford, Jonathan Kingston",
  "contributors": [
    {
      "name": "joél hawkins torres <@hwknsj>",
      "email": "joel@joel.fm",
      "url": "https://joel.fm"
    }
  ],
  "bugs": {
    "url": "https://github.com/hwknsj/multi-account-containers/issues"
  },
  "devDependencies": {
    "addons-linter": "^5.28.0",
    "ajv": "^6.12.6",
    "chai": "^4.3.6",
    "chalk": "^5.1.2",
    "eslint": "^7.32.0",
    "eslint-plugin-no-unsanitized": "^4.0.1",
    "eslint-plugin-promise": "^5.2.0",
    "htmllint-cli": "0.0.7",
    "json": "^11.0.0",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "sinon": "^14.0.1",
    "sinon-chai": "^3.7.0",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "web-ext": "^7.5.0",
    "webextensions-jsdom": "^1.4.1",
    "yarn-run-all": "^3.1.1"
  },
  "homepage": "https://github.com/hwknsj/multi-account-containers#readme",
  "license": "MPL-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hwknsj/multi-account-containers.git"
  },
  "scripts": {
    "clean": "yarn exec \"rm -rf web-ext-artifacts\"",
	"build": "web-ext build -s src/",
    "dev": "yarn run remove-locales-github && web-ext run -s src/",
    "lint": "run-p lint:addon lint:css lint:html lint:js",
    "lint:addon": "./bin/addons-linter.sh",
    "lint:css": "stylelint src/css/*.css",
    "lint:html": "htmllint *.html",
    "lint:js": "eslint .",
    "postbuild": "cp web-ext-artifacts/multi-account_containers-*.zip addon.xpi",
    "build": "./bin/build-addon.sh",
    "package": "run-s clean build postbuild",
    "restore-locales-github": "cd src/_locales && git restore .github/",
    "remove-locales-github": "rm -rf src/_locales/.github",
    "test": "run-p lint coverage",
    "test:once": "mocha test/**/*.test.js",
    "test:watch": "yarn run test:once -- --watch",
    "coverage": "nyc --reporter=html --reporter=text mocha test/**/*.test.js --timeout 60000"
  },
  "packageManager": "yarn@4.0.0-rc.15"
}
